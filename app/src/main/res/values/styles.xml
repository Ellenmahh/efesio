<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NixTheme.NoActionBar.PinkTheme" parent="AppTheme">
        <item name="colorAccent">@color/pink</item>
        <item name="colorControlHighlight">@color/pink</item>
        <item name="android:textColorHint">@color/pink</item>
        <item name="editTextStyle">@style/NixPinkEditText</item>
        <item name="buttonStyle">@style/NixPinkButton</item>
        <item name="android:textViewStyle">@style/NixPinkTextView</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="alertDialogTheme">@style/NixAlertDialog</item>
    </style>

    <style name="NixPinkButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/nix_pink_button</item>
        <item name="android:foreground">@drawable/nix_pink_riple</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="NixPinkEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/pink</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>
    <style name="NixAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/pink</item>
    </style>
    <style name="NixPinkTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <string-array name="image_ids">
        <item>@drawable/thor</item>
        <item>@drawable/thanos</item>
    </string-array>
    <style name="AppTheme.Gal">
            <item name="android:windowEnterAnimation">@transition/fadein</item>
            <item name="android:windowExitAnimation">@transition/fadeout</item>
    </style>

    <style name="AppTheme.Detail">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
    </style>
</resources>
