<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_login"
    android:background="#000"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:clickable="true"
    tools:context=".CadastroActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:src="@drawable/backgroundlogin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo2"/>
        <TextView
            android:id="@+id/login_title"
            android:layout_width="230dip"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="Através do seu CPF buscaremos a igreja que você está cadastrado."
            android:textColor="#fff"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_title"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <efesio.com.br.app.widgets.texts.CPFEditText
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/orange"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:padding="10dp"
                        android:hint="Digite o seu CPF"
                        android:inputType="number"
                        android:id="@+id/cpf_membro" />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/search48"
                    android:id="@+id/buscar"
                    android:textAlignment="textEnd"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>